{
  "name": "@bond-london/simple-gatsby-source-graphcms",
  "version": "6.2.0",
  "description": "Simple version of the official Gatsby source plugin for GraphCMS projects",
  "main": "index.js",
  "types": "index.d.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "predev": "rimraf dist",
    "build": "tsc --outDir dist",
    "dev": "tsc -w --outDir dist",
    "prepare": "cross-env NODE_ENV=production yarn run build && husky install",
    "format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md}\"",
    "release": "release-it"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "data",
    "gatsby",
    "gatsby-plugin",
    "graphcms",
    "graphql",
    "source"
  ],
  "license": "MIT",
  "dependencies": {
    "@graphcms/rich-text-types": "^0.5.0",
    "@types/fs-extra": "^9.0.13",
    "async-sema": "^3.1.1",
    "fs-extra": "^10.0.1",
    "gatsby-graphql-source-toolkit": "^2.0.1",
    "gatsby-plugin-image": "^2.20.0",
    "gatsby-plugin-utils": "^3.14.0",
    "gatsby-source-filesystem": "^4.20.0",
    "node-fetch": "2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "cross-env": "^7.0.3",
    "gatsby": "^4.20.0",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "release-it": "^15.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "gatsby": "^3.0.0||^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": [
        "yarn run format",
        "yarn run prepare"
      ]
    }
  }
}
