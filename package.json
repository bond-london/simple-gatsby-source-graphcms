{
  "name": "@bond-london/simple-gatsby-source-graphcms",
  "version": "1.6.0",
  "description": "Simple version of the official Gatsby source plugin for GraphCMS projects",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build:ts": "babel src --out-dir dist --extensions .ts,.tsx",
    "build:defs": "tsc --declaration --outDir dist --emitDeclarationOnly",
    "dev:ts": "babel -w src --out-dir dist --extensions .ts,.tsx",
    "dev:defs": "tsc -w --declaration --outDir dist --emitDeclarationOnly",
    "dev": "run-p dev:ts dev:defs",
    "prepare": "cross-env NODE_ENV=production yarn run build:ts && yarn run build:defs && husky install",
    "format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,md}\"",
    "release": "release-it"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "data",
    "gatsby",
    "gatsby-plugin",
    "graphcms",
    "graphql",
    "source"
  ],
  "license": "MIT",
  "dependencies": {
    "gatsby-graphql-source-toolkit": "^2.0.1",
    "gatsby-plugin-image": "^1.5.0",
    "gatsby-source-filesystem": "^3.5.0",
    "he": "1.2.0",
    "node-fetch": "2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.14.0",
    "babel-preset-gatsby-package": "^1.5.0",
    "cross-env": "^7.0.3",
    "gatsby": "^3.5.0",
    "husky": "^7.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": [
        "yarn run format",
        "yarn run prepare"
      ]
    }
  }
}
